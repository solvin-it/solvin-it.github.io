---
import MainLayout from '../layouts/MainLayout.astro';
import { siteConfig } from '../content/site.ts';

const title = `Experience | ${siteConfig.name}`;
const description = 'My professional journey from Technical Solutions Engineer to AI/ML Engineer, featuring key roles, achievements, and technical evolution.';

// Experience data
const experiences = [
