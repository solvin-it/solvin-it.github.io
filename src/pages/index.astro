  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center bg-gradient-to-br from-gray-50 to-white dark:from-gray-900 dark:to-gray-800 overflow-hidden">
    <div class="container">
      <div class="max-w-5xl mx-auto text-center space-y-12 py-12">
        <!-- Hero Text -->
        <div class="space-y-8 animate-in" style="animation-delay: 0.1s">
          <div class="space-y-6">
            <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-bold tracking-tight text-gray-900 dark:text-white leading-tight">
              {siteConfig.hero.headline}
            </h1>
            <p class="text-lg sm:text-xl lg:text-2xl text-gray-600 dark:text-gray-300 leading-relaxed max-w-4xl mx-auto">
              {siteConfig.hero.subhead}
            </p>
          </div>
          
