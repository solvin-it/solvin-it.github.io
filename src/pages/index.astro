    <div class="container">
      <div class="grid grid-cols-2 lg:grid-cols-3 gap-4 lg:gap-8">
        {siteConfig.stats.map((stat, index) => (
          <div 
            class="animate-in" 
            style={`animation-delay: ${0.1 + index * 0.1}s`}
          >
            <StatCard {...stat} />
