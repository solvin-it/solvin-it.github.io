            <div class="flex justify-between items-center">
              <div class="w-8 h-0.5 bg-primary-300 dark:bg-primary-600"></div>
              <div class="w-8 h-0.5 bg-primary-300 dark:bg-primary-600"></div>
            </div>
          </div>
          
          <div class="grid md:grid-cols-3 gap-8 lg:gap-12 relative z-10">
            {siteConfig.workPillars.map((pillar, index) => (
              <div 
                class="text-center animate-in group"
                style={`animation-delay: ${0.1 + index * 0.1}s`}
              >
                <!-- Step Card -->
                <div class="bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-700 dark:to-gray-800 rounded-2xl p-4 lg:p-4 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-200 dark:border-gray-600 group-hover:border-primary-300 dark:group-hover:border-primary-600 relative overflow-hidden">
                  
                  <!-- Step Number -->
                  <div class="absolute top-4 right-4 w-8 h-8 bg-primary-100 dark:bg-primary-900 rounded-full flex items-center justify-center">
                    <span class="text-sm font-bold text-primary-600 dark:text-primary-400">{index + 1}</span>
                  </div>
                  
                  <!-- Icon Container -->
                  <div class="relative mb-6">
                    <div class="w-20 h-20 mx-auto bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
                      <div class="text-3xl text-white" role="img" aria-label={pillar.title}>
