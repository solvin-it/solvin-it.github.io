          <div class="flex flex-col sm:flex-row gap-4 pt-4 justify-center">
            <a href="/projects" class="btn btn-primary text-base px-8 py-4">
              {siteConfig.hero.primaryCTA}
            </a>
            <a href="/resume" class="btn btn-secondary text-base px-8 py-4">
              {siteConfig.hero.secondaryCTA}
            </a>
          </div>
          
