                      </div>
                    </div>
                  </div>
                  
                  <!-- Content -->
                  <h3 class="text-lg lg:text-xl font-bold tracking-tight text-gray-900 dark:text-white mb-4 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors duration-300">
                    {pillar.title}
                  </h3>
                  
                  <p class="text-gray-600 dark:text-gray-300 leading-relaxed text-sm lg:text-base">
                    {pillar.description}
                  </p>
                  
                  <!-- Bottom accent -->
                  <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-primary-500 to-primary-600 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></div>
                </div>
                
                <!-- Mobile connector -->
                {index < 2 && (
                  <div class="md:hidden flex justify-center mt-6 mb-2">
                    <div class="w-0.5 h-8 bg-primary-300 dark:bg-primary-600"></div>
                  </div>
                )}
              </div>
            ))}
          </div>
        </div>
        
        <!-- Call to action -->
        <div class="text-center mt-16 animate-in" style="animation-delay: 0.5s">
          <div class="bg-gradient-to-r from-primary-50 to-primary-100 dark:from-primary-900/20 dark:to-primary-800/20 rounded-2xl p-8 border border-primary-200 dark:border-primary-700">
            <p class="text-lg text-gray-700 dark:text-gray-300 mb-6 max-w-3xl mx-auto">
              This systematic approach ensures every project delivers measurable business value while maintaining technical excellence.
            </p>
            <a href="/projects" class="btn btn-primary">
