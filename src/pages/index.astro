  <!-- Latest Notes Section -->
  <section class="section bg-gray-50 dark:bg-gray-900">
    <div class="container">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-12 animate-in">
        <div>
          <h2 class="heading-2 text-gray-900 dark:text-white mb-4">
