      <div class="max-w-4xl mx-auto text-center space-y-16 py-20">
        <!-- Hero Text -->
        <div class="space-y-10 animate-in" style="animation-delay: 0.1s">
          <div class="space-y-8">
            <div class="inline-flex items-center px-6 py-3 bg-primary-100 dark:bg-primary-900/30 text-primary-800 dark:text-primary-300 rounded-none border border-primary-200 dark:border-primary-800 text-sm font-serif tracking-wider uppercase">
              Technical Solutions Engineer → AI/ML Engineer
            </div>
            <h1 class="heading-1 text-neutral-900 dark:text-neutral-100 leading-tight">
              {siteConfig.hero.headline}
            </h1>
            <p class="body-large max-w-3xl mx-auto leading-loose">
              {siteConfig.hero.subhead}
            </p>
          </div>
          
          <!-- CTAs -->
          <div class="flex flex-col sm:flex-row gap-6 pt-8 justify-center">
            <a href="/projects" class="btn btn-primary text-base">
              {siteConfig.hero.primaryCTA}
            </a>
            <a href="/resume.pdf" target="_blank" class="btn btn-secondary text-base">
              {siteConfig.hero.secondaryCTA}
            </a>
          </div>
          
